<div style="padding: 10px; border-top:1px solid #ddd;border-bottom:1px solid #ddd; width: 100%">
    <div>
        <b>Title:</b><%= note.title %>
        
    </div>
    <div>
        <b>Body:</b>
        <%= note.body %>
    </div>

    <div>
        (
          <%= link_to 'Edit', edit_patient_note_path(note.patient,note) %>

        |
          <%= link_to 'Delete', [note.patient, note],
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this note?'},
                :style=>'color: red;'
                %>
        )
    </div>


    
</div>

